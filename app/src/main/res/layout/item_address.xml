<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin_super_small"
        android:layout_marginLeft="@dimen/material_margin_super_small"
        android:layout_marginEnd="@dimen/material_margin_super_small"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/title"
                style="@style/Typography.Base.Roboto.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="Название"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/material_margin_super_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="Москваа"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/material_margin_super_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="20 июня"
                tools:textColor="@color/black" />


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/material_margin_super_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/material_margin_super_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>